<%- include('partials/header') %>

<div class="flex-structure">

  <div>
      <a style ="text-decoration: none;" href="/inventory"><button class="style-button btn-primary">Inventory | Sell Parts</button></a>
  </div>
  <div>
      <a style ="text-decoration: none; " href="/soldItems"> <button class="style-button btn-primary">Sold Parts</button></a>
  </div>
  <div>
      <a style ="text-decoration: none; " href="/orderItems"><button class="style-button btn-primary">Parts to order</button></a> 
  </div>
  <div>
    <a style ="text-decoration: none;" href="/statistics"><button class="style-button btn-warning">Everyday Stats</button></a>
  </div>

</div>

<div class="page-container">

  <div class="main-container">

    <h1 style="background-color:white; text-align: center;">REGISTER PARTS</h1>
    <hr />

    <!-- Buying Form -->
    <form action="/" method="POST">
      
      <div class="d-flex justify-content-evenly">
        
        <div class="p-2 bd-highlight">
          <div class="form-floating" style="width: 15rem;">
            <select name="size" style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" class="form-select" id="floatingSelect" aria-label="Floating label select example" required>
                <option selected value="Small">Small</option>
                <option value="Large">Large</option>
                <option value="Medium">Medium</option>
            </select>
            <label for="floatingSelect">select size of the part</label>
          </div>
        </div>
      </div>
        
      <div>
        <br>
        <input style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" type="text" name="partId" class="form-control" placeholder="Part ID" autocomplete="off" required>
        <br>
        <input style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" type="text" name="partName" class="form-control" placeholder="Part Name" autocomplete="off" required>
        <br>
        <textarea style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" class="form-control" name="supplierInfo" rows="3" cols="4" placeholder="Supplier Name and Add." autocomplete="off" required></textarea>
        <br>
        <input style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" type="text" name="price" class="form-control" placeholder="Cost Price (per unit)" autocomplete="off" required>
        <br>
        <input style="border: 1px yellow solid; box-shadow: 0px 1px 2px yellow;" type="text" name="quantity" class="form-control" placeholder="Quantity" autocomplete="off" required>
        <br>
        <button style="border: 1px rgb(0, 255, 221) solid; box-shadow: 0px 1px 5px blue; color: black;" name="button" type="submit" class="btn btn-outline-info">SUBMIT</button>
      </div>
    </form>
  </div>

</div>

<%- include('partials/footer') %>
