<h1 style="background-color: gainsboro; text-align: center;">PARTS TO ORDER</h1>
<hr />

<table class="table table-striped table-bordered text-center">
    <thead>
      <tr class="table-dark">
        <th scope="col">#ID</th>
        <th scope="col">Last Ordered</th>
        <th scope="col">Part Name</th>
        <th scope="col">Cost Price<br>(per unit)</th>
        <th scope="col">Supplier</th>
        <th scope="col">Available<br>Stock</th>
      </tr>
    </thead>
    <tbody>

    <%  orderParts.forEach((event) => { %>
        <form action="" method="post">
            <tr>
                <th><%= event.id %></th>
                <td class="col-2"><%= event.date %> </td>
                <td><%= event.name %></td>
                <td><%= event.costPrice %></td>
                <td><%= event.supplier %></td>
                <td><%= event.stock %></td>
              </tr>
        </form>
    <%  }) %> 

    </tbody>
  </table>

