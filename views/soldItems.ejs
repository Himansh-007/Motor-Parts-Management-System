<%- include("partials/header") %> 

<div class="flex-structure">

  <div>
      <a style ="text-decoration: none;" href="/"><button class="style-button">Home</button></a>
  </div>

</div>

<h1 style="background-color: gainsboro; text-align: center;">SOLD PARTS</h1>
<hr />

<table class="table table-striped">
    <thead>
      <tr class="table-dark">
        <th scope="col">#ID</th>
        <th scope="col">Date</th>
        <th scope="col">Part Name</th>
        <th scope="col">Cost Price<br>(per unit)</th>
        <th scope="col">Selling Price<br>(per unit)</th>
        <th scope="col">Quantity<br> (sold)</th>
        <th scope="col">Profit<br> ( in Rs.)</th>
      </tr>
    </thead>
    <tbody>

    <%  soldParts.forEach((event) => { %>
        <form action="" method="post">
            <tr>
                <th><%= event.id %></th>
                <td><%= event.date %> </td>
                <td><%= event.name %></td>
                <td><%= event.CP %></td>
                <td><%= event.SP %></td>
                <td><%= event.quantity %></td>
                <td><%= event.profit %></td>
              </tr>
        </form>
    <%  }) %> 
        
    </tbody>
  </table>

<%- include("partials/footer") %> 